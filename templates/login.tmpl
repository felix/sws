{{ define "content" }}
	<!-- login -->
	<main>
		<h2>Login</h2>
		<form method="post" action="/login">
			<div class="field">
				<input type="email" name="email" placeholder="your email" required />
			</div>
			<div class="field">
				<input type="password" name="password" placeholder="your password" required />
			</div>
			<div class="field">
				<input type="submit" />
			</div>
		</form>
	</main>
{{ end }}
